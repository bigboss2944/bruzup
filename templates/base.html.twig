        {% endblock %}


    </head>
    <body>


    {% set route_name = app.request.attributes.get('_route') %}

    {% block navbar %}
     <div class="top-bar align-top">

            <div class="top-bar-left">

            <a href="{{ path('entreprise_index') }}">
