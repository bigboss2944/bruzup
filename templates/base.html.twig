            </div>
            <div class="top-bar-right">

                <ul class="vertical medium-horizontal menu">

                    <li><a class="nav-link" href="{{path('entreprise_index')}}">Accueil</a></li>
                    <li><a class="nav-link" href="{{path('association')}}">L'asso</a></li>
                    <li><a class="nav-link" href="{{path('contact')}}">Contact</a></li>


                    {%  if is_granted('ROLE_USER') %}

                        <li><a class="nav-link" href="{{path('user_edit',{'username': app.user.username })}}">Mon profil</a></li>
                        <li><a class="nav-link" href="{{path('app_logout' )}}">Se d√©connecter</a></li>

                    {% else %}

                        <li><a class="nav-link" href="{{path('app_login')}}">Connexion</a></li>
                    {% endif %}
                </ul>
            </div>

        </div>

    {% endblock %}



        {% block body %}



        {% endblock %}
