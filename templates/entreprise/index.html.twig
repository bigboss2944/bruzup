{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <h1>Entreprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
{#                <th>Idlogo</th>#}
                <th>Password</th>
                <th>Nom</th>
                <th>Rue</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>Telephone</th>
                <th>Siteweb</th>
                <th>Longdescription</th>
                <th>Shortdescription</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.id }}</td>
{#                <td>{{ entreprise.idlogo }}</td>#}
                <td>{{ entreprise.password }}</td>
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.rue }}</td>
                <td>{{ entreprise.codepostal }}</td>
                <td>{{ entreprise.ville }}</td>
                <td>{{ entreprise.telephone }}</td>
                <td>{{ entreprise.siteweb }}</td>
                <td>{{ entreprise.longdescription }}</td>
                <td>{{ entreprise.shortdescription }}</td>
                <td>{{ entreprise.email }}</td>
                <td>
                    <a href="{{ path('entreprise_show', {'id': entreprise.id}) }}">show</a>
                    <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entreprise_new', {'username': app.user.username})}}">Create new</a>
{% endblock %}
